<FrameLayout android:id="@+id/new_player_container_other"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="1400px" >


    <RelativeLayout
        android:id="@+id/newPlayerEntryScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pop_up_background"
        android:foregroundTint="@color/white">

        <TextView
            android:id="@+id/newPlayerEntryTitle"
            android:layout_width="800px"
            android:layout_height="120px"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20px"
            android:gravity="center"
            android:scaleType="fitXY"
            android:shadowColor="@color/black"
            android:shadowDx="3.5"
            android:shadowDy="3.3"
            android:shadowRadius="3.6"
            android:text="@string/newPlayerEntry"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/newPlayerInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newPlayerEntryTitle"
            android:layout_marginTop="100dp"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/white"
            android:padding="100px"
            android:hint="@string/newPlayer"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:onClick="enterPlayer"
            android:textColor="@color/white" />


        <Button
            android:id="@+id/submitButton"
            style="@style/thinButton"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200px"
            android:layout_marginBottom="35px"
            android:onClick="submitClick"
            android:text="@string/submit" />

    </RelativeLayout>

</FrameLayout>